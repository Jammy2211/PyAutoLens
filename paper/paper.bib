keywords = {cosmology,cosmology: theory,methods: numerical,methods,numerical,theory},
number = {2},
pages = {35},
publisher = {IOP Publishing},
title = {{COLOSSUS: A Python Toolkit for Cosmology, Large-scale Structure, and Dark Matter Halos}},
