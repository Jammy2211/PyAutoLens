journal = {Monthly Notices of the Royal Astronomical Society},
keywords = {data analysis,gravitational lensing,high angular resolution,image,methods,processing,strong,techniques},
number = {October},
pages = {1--16},
title = {{A novel approach to visibility-space modelling of interferometric gravitational lens observations at high angular resolution}},
volume = {16},
